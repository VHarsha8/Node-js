<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form</title>
    <link rel="stylesheet" href="styles/style.css">
</head>
<body>
    <div class="flex items-center justify-center w-full h-screen">
        <form action="/submit-form" method="POST">
            <div class="flex flex-col gap-6 p-6 items-center justify-center rounded-xl w-[400px] h-auto bg-slate-800">
                <div class="flex flex-col w-full space-y-2">
                    <label for="name" class="font-sans text-white">Username</label>
                    <input type="text" id="name" name="name" class="w-full px-4 py-2 text-white border border-gray-500 rounded-md appearance-none focus:border-twitter focus:outline-none bg-twitter focus:ring-2 focus:ring-blue-800">
                </div>
               
                <div class="flex flex-col w-full space-y-2 ">
                    <div class="flex items-center justify-between">
                        <label for="password" class="font-sans text-white">Password</label>
                        <a href="#" class="font-sans text-blue-600">Forgot Password?</a>
                    </div>

                    <div class="relative w-full">
                        <input type="password" id="password" name="password" class="relative w-full px-4 py-2 text-white border border-gray-500 rounded-md appearance-none focus:border-twitter focus:outline-none bg-twitter focus:ring-2 focus:ring-blue-800">
                    
                        <div class="absolute cursor-pointer top-2 right-2" onclick="showPassword()">
                             <svg id="eye-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
                                 <path d="M12 15a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" />
                                 <path fill-rule="evenodd" d="M1.323 11.447C2.811 6.976 7.028 3.75 12.001 3.75c4.97 0 9.185 3.223 10.675 7.69.12.362.12.752 0 1.113-1.487 4.471-5.705 7.697-10.677 7.697-4.97 0-9.186-3.223-10.675-7.69a1.762 1.762 0 0 1 0-1.113ZM17.25 12a5.25 5.25 0 1 1-10.5 0 5.25 5.25 0 0 1 10.5 0Z" clip-rule="evenodd" />
                              </svg>
                             <svg id="eye-slash-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6" style="display:none;">
                                  <path d="M3.53 2.47a.75.75 0 0 0-1.06 1.06l18 18a.75.75 0 1 0 1.06-1.06l-18-18ZM22.676 12.553a11.249 11.249 0 0 1-2.631 4.31l-3.099-3.099a5.25 5.25 0 0 0-6.71-6.71L7.759 4.577a11.217 11.217 0 0 1 4.242-.827c4.97 0 9.185 3.223 10.675 7.69.12.362.12.752 0 1.113Z" />
                                  <path d="M15.75 12c0 .18-.013.357-.037.53l-4.244-4.243A3.75 3.75 0 0 1 15.75 12ZM12.53 15.713l-4.243-4.244a3.75 3.75 0 0 0 4.244 4.243Z" />
                                  <path d="M6.75 12c0-.619.107-1.213.304-1.764l-3.1-3.1a11.25 11.25 0 0 0-2.63 4.31c-.12.362-.12.752 0 1.114 1.489 4.467 5.704 7.69 10.675 7.69 1.5 0 2.933-.294 4.242-.827l-2.477-2.477A5.25 5.25 0 0 1 6.75 12Z" />
                             </svg>
                        </div>
                    </div>
                </div>

                <input type="submit" value="Sign in" class="w-full px-4 py-2 font-semibold text-white bg-green-600 rounded-md cursor-pointer">
            </div>
        </form>
    </div>

    <script>
        function showPassword() {
            let passwordField = document.getElementById('password');
            let eyeIcon = document.getElementById('eye-icon');
            let eyeSlashIcon = document.getElementById('eye-slash-icon');

            if (passwordField.type === "password") {
                passwordField.type = "text";
                eyeIcon.style.display = "none";
                eyeSlashIcon.style.display = "block";
            } else {
                passwordField.type = "password";
                eyeIcon.style.display = "block";
                eyeSlashIcon.style.display = "none";
            }
        }
    </script>
</body>
</html>
